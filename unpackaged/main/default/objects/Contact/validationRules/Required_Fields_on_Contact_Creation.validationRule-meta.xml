<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Required_Fields_on_Contact_Creation</fullName>
    <active>true</active>
    <description>Email or Phone or Mobile</description>
    <errorConditionFormula>AND
(
ISBLANK(Email),
ISBLANK(Phone),
ISBLANK(MobilePhone)
)</errorConditionFormula>
    <errorMessage>Please fill in either the Email or Phone or Mobile field</errorMessage>
</ValidationRule>
